{
  "name": "azin-language-support",
  "displayName": "Azin language support",
  "description": "Syntax highlighting for the Azin programming language",
  "publisher": "Alex12-Git200",
  "version": "0.1.5",
  "icon": "azin.png",

  "repository": {
    "type": "git",
    "url": "https://github.com/Alex12-Git200/Azin-Language-Support-VSCode"
  },

  "engines": {
    "vscode": "^1.108.1"
  },

  "contributes": {
    "languages": [
      {
        "id": "azin",
        "aliases": ["Azin"],
        "extensions": [".az"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "azin",
        "scopeName": "source.azin",
        "path": "./syntaxes/azin.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "azin",
        "path": "./snippets/azin.json"
      }
    ]
  }
}
