{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Azin",
  "scopeName": "source.azin",
  "patterns": [
    { "include": "#comments" },
    { "include": "#controlKeywords" },
    { "include": "#useKeyword" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#modules" },
    { "include": "#atOperator" },
    { "include": "#bangOperator" },
    { "include": "#angleBlocks" },
    { "include": "#constants" },
    { "include": "#typePointer" }
  ],
  "repository": {
    "controlKeywords": 
    {
      "patterns": 
      [
        {
          "name": "keyword.control.azin",
          "match": "\\b(if|else|while|for|return)\\b"
        }
      ]
    },

    "useKeyword": 
    {
      "patterns": 
      [
        {
          "name": "support.type.xazin",
          "match": "\\buse\\b"
        }
      ]
    },

    "types": 
    {
      "patterns": 
      [
        {
          "name": "storage.type.azin",
          "match": "\\b(int|bool|void|nore|char)\\b|\\bchar\\b"
        }
      ]
    },

    "strings": 
    {
      "name": "string.quoted.double.azin",
      "begin": "\"",
      "end": "\"",
      "patterns": 
      [
        {
          "name": "constant.character.escape.azin",
          "match": "\\\\."
        }
      ]
    },

    "numbers": 
    {
      "patterns": 
      [
        {
          "name": "constant.numeric.azin",
          "match": "\\b\\d+\\b"
        }
      ]
    },

    "functions": 
    {
      "patterns": 
      [
        {
          "name": "entity.name.function.azin",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=@)"
        },
        {
          "name": "entity.name.function.azin",
          "match": "(?<!@)\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\()"
        }
      ]
    },

    "modules": 
    {
      "patterns": 
      [
        {
          "name": "entity.name.namespace.azin",
          "match": "(?<=@)[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },

    "atOperator": 
    {
      "patterns": 
      [
        {
          "name": "support.type.azin",
          "match": "@"
        }
      ]
    },

    "bangOperator": 
    {
      "patterns": 
      [
        {
          "name": "keyword.operator.bang.azin",
          "match": "!"
        }
      ]
    },

    "comments": 
    {
      "patterns": 
      [
        {
          "name": "comment.line.double-slash.azin",
          "match": "//.*$"
        }
      ]
    },

    "constants": 
    {
      "patterns": 
      [
        {
          "name": "constant.language.boolean.azin",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "typePointer": 
    {
      "patterns": 
      [
        {
          "name": "storage.type.azin",
          "match": "(?<=\\b(int|bool|char|void|nore))\\s*\\*"
        }
      ]
    }

  }
}
